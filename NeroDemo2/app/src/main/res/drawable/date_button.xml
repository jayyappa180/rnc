<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d6d8d6" />
            <gradient android:angle="-90" android:startColor="#1B9CE2" android:endColor="#d6d8d6"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d6d8d6" />
            <solid android:color="#d6d8d6"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d6d8d6" />
            <gradient android:angle="-90" android:startColor="#d6d8d6" android:endColor="#d6d8d6" />
            <corners android:radius="25dp"/>
        </shape>
    </item>
</selector>